.main-container, .sidenav-container
  width 100%
  height 100%

.sidenav
  width 200px

  & .sidenav-menu
    font-size 1.1rem

    > .sidenav-menu-item
      height 40px
      line-height 40px

      > span, > a
        display block
        width 100%
        height 100%
        padding 0 12px
        color inherit
        text-decoration none
        cursor pointer

        &:hover, &.active
          background-color aliceblue
          font-weight bold
